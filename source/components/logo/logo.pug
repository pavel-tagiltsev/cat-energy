mixin logo
  - const href = page === 'index' ? undefined : '/'

  a.logo(href!=href)&attributes(attributes)
    picture
      source(
        media='(min-width: 1440px)'
        srcset='@img/stack-sprite.svg#logo-desktop'
      )
      source(
        media='(min-width: 768px)'
        srcset='@img/stack-sprite.svg#logo-tablet'
      )
      img.logo__img(
        src='@img/stack-sprite.svg#logo-mobile'
        alt='Логотип компании'
        width='190'
        height='38'
      )
